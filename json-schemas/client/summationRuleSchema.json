{
	"$schema": "http://json-schema.org/draft-04/schema",
	"title": "Schema of a summation rule",
	"type": "object",
	"properties": {
		"id":         { "type": "integer" },
		"type":       { "enum": ["summation"] },
		"optionIds":  { "type": "array", "items": { "type": "integer" } },
		"lowerBound": { "type": "integer" },
		"upperBound": { "type": "integer" }
	},
	"required": ["id", "type", "optionIds", "lowerBound", "upperBound"]
}
