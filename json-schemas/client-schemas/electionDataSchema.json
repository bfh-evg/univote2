{
	"$schema": "http://json-schema.org/draft-04/schema",
	"title": "UniVote2: Schema of an election data",
	"type": "object",
	"properties": {
		"definition": {
			"description": "Election definition",
			"$ref": "electionDefinitionSchema.json"
		},
		"issues": {
			"description": "Election issues",
			"type": "array",
			"items": {
				"oneOf":[
					{ "$ref": "votingIssueSchema.json" },
					{ "$ref": "simpleElectionIssueSchema.json" },
					{ "$ref": "listElectionIssueSchema.json" }
				]
			}
		},
		"cryptoSetting": {
			"description": "Crypto setting",
			"$ref": "cryptoSettingSchema.json"
		},
		"encryptionKey": {
			"description": "Encryption key (decimal notation)",
			"type": "string"
		},
		"signatureGenerator": {
			"description": "Signature generator (decimal notation)",
			"type": "string"
		}
	},
	"required": ["definition", "issues", "cryptoSetting", "encryptionKey", "signatureGenerator"]
}
