{
	"title": "Schema for ElectionData in UniVote",
	"description": "This schema describes the format election data in JSON format",
	"additionalProperties" : false,
	"type":"object",
	"$schema": "http://json-schema.org/draft-04/schema",
	"properties": {
		"elections": {
			"type": "array",
			"description": "List of elections for this event",
			"items": {
				"oneOf": [
					{
						"$ref": "#/definitions/candidateElection"
					},
					{
						"$ref": "#/definitions/partyElection"
					},
					{
						"$ref": "#/definitions/vote"
					}
				]
				
			}
		}
	},
	
	"definitions": {


		
		"election":{
			"type": "object",
			"description":  "Election object",
			"properties":{
				
				"title": {
					"$ref": "#/definitions/localizedTexts",
					"description":  "Title of the election"
				},
				"description": {
					"$ref": "#/definitions/localizedTexts",
					"description":  "Text containing a description of the election"
				},
				"rules": {
					"type": "array",
					"description": "List of rules",
					"items": 
					{
						"type":"object",
						"additionalProperties" : false,
						"properties":{
							"objectType": {
								"type": "string",
								"description":  "Canonical name of classe",
								"enum": ["ForAllRule", "SummationRule"]	
							},
							"lowerBound": {
								"type":"number",
								"description": "Minimal number of occurences of a choice id"
							},
							"upperBound": {
								"type":"number",
								"description": "Maximal number of occurences of a choice id"
							},
							"choiceId": {
								"type":"array",
								"description": "List of concerned choice id",
								"items":
								{
									"type":"number",
									"description": "Identifier of the choices concerned by this rule"
								}
							}
						},
						"required": ["objectType", "lowerBound", "upperBound", "choiceId"]
					}
				},
				"encryptionSetting": {
					"type": "object",
					"description": "Encryption cryptographic setting including encryptionKey",
					"oneOf": [
						{
							"$ref": "#/definitions/encryptionDL"
						},
						{
							"$ref": "#/definitions/encryptionECDL"
						}
					]
				},
				"signatureSetting": {
					"type": "object",
					"description": "Signature cryptographic setting including g hat",
					"oneOf": [
						{
							"$ref": "#/definitions/signatureDL"
						},
						{
							"$ref": "#/definitions/signatureECDL"
						}
					]
				}
			},
			"required": ["title", "description", "rules", "encryptionSetting", "signatureSetting" ]
		},




		"candidateElection": {
			"allOf": [
				{ 
					"$ref": "#/definitions/election" 
				},
				{ 

					"properties": {
						"choices": { 
							"type": "array",
							"description": "List of choices",
							"items": 
							{
								"$ref": "#/definitions/candidate"
							}
						},
						"candidateLists": { 
							"type": "array",
							"description": "List of candidate lists",
							"items": 
							{
								"$ref": "#/definitions/candidateList" 
							}
						},
						"objectType": {
							"type": "string",
							"description":  "Canonical name of class",
							"enum": [ "CandidateElection" ]	
						}
					},
					"required": ["choices", "candidateLists", "objectType"]
				}
			]
		},
		"partyElection": {
			"allOf": [
				{ 
					"$ref": "#/definitions/election" 
				},
				{ 

					"properties": {
						"choices": { 
							"type": "array",
							"description": "List of choices",
							"items": 
							{
								"oneOf": [
									{
										"$ref": "#/definitions/partyCandidate"
									},
									{
										"$ref": "#/definitions/party"
									}
								]
							}
						},
						"partyLists": {
							"type": "array",
							"description": "List of party lists",
							"items": 
							{
								"$ref": "#/definitions/partyList" 
							}
						},
						"objectType": {
							"type": "string",
							"description":  "Canonical name of class",
							"enum": [ "PartyElection" ]	
						}
					},
					"required": ["choices", "partyLists", "objectType"]
				}
			]
		},
		"vote": {
			"allOf": [
				{ 
					"$ref": "#/definitions/election" 
				},
				{ 

					"properties": {
						"choices": { 
							"type": "array",
							"description": "List of choices",
							"items": 
							{
								"$ref": "#/definitions/option"
							}
						},
						"question": { 
							"$ref": "#/definitions/localizedTexts",
							"description": "Question of the vote"
						},
						"objectType": {
							"type": "string",
							"description":  "Canonical name of class",
							"enum": [ "Vote" ]	
						}
					},
					"required": ["choices", "question", "objectType"]
				}
			]
		},




		"choice": {
			"type":"object",
			"properties":{
				"choiceId": {
					"type":"number",
					"description": "Choice identifier"
				}
			},
			"required": ["choiceId"]
		},
		"candidate": {

			"allOf": [
				{ 
					"$ref": "#/definitions/choice" 
				},
				{ 
					
					"properties": {
						"candidateNumber": { 
							"type": "string",
							"description": "Number of the candidate"
						},
						"lastname": { 
							"type": "string",
							"description": "Lastname of the candidate"
						},
						"firstname": { 
							"type": "string",
							"description": "Firstname of the candidate"
						},
						"objectType": {
							"type": "string",
							"description":  "Canonical name of class",
							"enum": [ "Candidate", "PartyCandidate" ]	
						}
					},
					"required": ["candidateNumber", "lastname", "firstname", "objectType"]
				}
			]
		},
		"party": {
			"allOf": [
				{ 
					"$ref": "#/definitions/choice" 
				},
				{ 

					"properties": {
						"name": { 
							"$ref": "#/definitions/localizedTexts",
							"description": "Name of the party"
						},
						"objectType": {
							"type": "string",
							"description":  "Canonical name of class",
							"enum": [ "Party" ]	
						}
					},
					"required": ["name", "objectType"]
				}
			]
		},
		"option": {
			"allOf": [
				{ 
					"$ref": "#/definitions/choice" 
				},
				{ 

					"properties": {
						"text": { 
							"$ref": "#/definitions/localizedTexts",
							"description": "Text of the option"
						},
						"objectType": {
							"type": "string",
							"description":  "Canonical name of class",
							"enum": [ "Option" ]	
						}
					},
					"required": ["text", "objectType"]
				}
			]
		},
		"partyCandidate": {
			"allOf": [
				{ 
					"$ref": "#/definitions/candidate" 
				},
				{ 

					"properties": {
						"partyId": { 
							"type": "number",
							"description": "Reference on party choice id"
						},
						"objectType": {
							"type": "string",
							"description":  "Canonical name of class",
							"enum": [ "PartyCandidate" ]	
						}
					},
					"required": ["partyId", "objectType"]
				}
			]
		},




		"choiceList": {
			"type":"object",
			"properties":{
				"name": {
					"$ref": "#/definitions/localizedTexts",
					"description":  "Name of the list"	
				},
				"shortName": {
					"$ref": "#/definitions/localizedTexts",
					"description":  "Short name of the list"	
				},
				"choicesIds": {
					"type": "array",
					"description":  "List of references to choices",
					"items": {
						"type": "number"
					}
				}
			},
			"required": ["objectType", "name", "shortName", "choicesIds"]
		},
		"candidateList": {
			"allOf": [
				{ 
					"$ref": "#/definitions/choiceList" 
				},
				{ 

					"properties": {
						"objectType": {
							"type": "string",
							"description":  "Canonical name of class",
							"enum":	["CandidateList"]
						}
					},
					"required": ["objectType"]
				}
			]
		},
		"partyList": {
			"allOf": [
				{ 
					"$ref": "#/definitions/choiceList" 
				},
				{ 

					"properties": {
						"partyId": { 
							"type": "number",
							"description": "Reference to party choice id"
						},
						"objectType": {
							"type": "string",
							"description":  "Canonical name of class",
							"enum":	["PartyList"]
						}
					},
					"required": ["partyId", "objectType"]
				}
			]
		},



		"localizedTexts": {
			"type": "array",
			"description": "Container for multilingual texts",
			"items": {
				"type": "object",
				"properties": {
					"languageCode": {
						"type": "string",
						"description": "Language code of the language of string 'text'",
						"enum": [ "EN", "DE", "FR"]
					},
					"text": {
						"type": "string",
						"description": "Content"
					}
				},
				"required": ["languageCode", "text"]
			}
		},



		"encryptionDL": {
			"additionalProperties" : false,
			"properties": {
				"type": {
					"type": "string",
					"enum": [
						"DL"
					]
				},
				"p": {
					"type": "string"
				},
				"q": {
					"type": "string"
				},
				"g": {
					"type": "string"
				},
				"encryptionKey": {
					"type": "string",
					"description": "Key used to encrypt ballot"
				}
			},
			"required": ["type", "p", "q", "g", "encryptionKey"]
		},
		"encryptionECDL": {
			"additionalProperties" : false,
			"properties": {
				"type": {
					"type": "string",
					"enum": [
						"ECDL"
					]
				},		
				"curve": {
					"type": "string"
				},
				"encryptionKey": {
					"type": "string",
					"description": "Key used to encrypt ballot"
				}
			},
			"required": ["type", "curve", "encryptionKey"]
		},
		"signatureDL": {
			"additionalProperties" : false,
			"properties": {
				"type": {
					"type": "string",
					"enum": [
						"DL"
					]
				},
				"p": {
					"type": "string"
				},
				"q": {
					"type": "string"
				},
				"ghat": {
					"type": "string",
					"description": "Modified generator g hat"
				}
			},
			"required": ["type", "p", "q", "ghat"]
		},
		"signatureECDL": {
			"additionalProperties" : false,
			"properties": {
				"type": {
					"type": "string",
					"enum": [
						"ECDL"
					]
				},		
				"curve": {
					"type": "string"
				},
				"ghat": {
					"type": "string",
					"description": "Modified generator g hat"
				}
			},
			"required": ["type", "curve", "ghat"]
		}
	}
}
