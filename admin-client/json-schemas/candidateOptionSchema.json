{
	"$schema": "http://json-schema.org/draft-04/schema",
	"title": "Schema of a candidate option",
	"type": "object",
	"properties": {
		"id":            { "type": "integer" },
		"type":          { "enum": ["candidate"] },
		"number":        { "type": "string" },
		"lastName":      { "type": "string" },
		"firstName":     { "type": "string" },
		"sex":           { "enum": ["M", "F"] },
		"yearOfBirth":   { "type": "integer", "minimum": 1900, "maximum": 2100 },
		"studyBranch":   { "$ref": "i18nTextSchema.json" },
		"studyDegree":   { "$ref": "i18nTextSchema.json" },
		"studySemester": { "type": "integer", "minimum": 1, "maximum": 20 },
		"status":        { "enum": ["OLD", "NEW"] }
	},
	"required": ["id", "type", "lastName", "firstName"],
	"additionalProperties": false
}
