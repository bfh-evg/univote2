{
	"$schema": "http://json-schema.org/draft-04/schema",
	"title": "UniVote2: Schema of a voting issue",
	"type": "object",

	"properties": {
		"id": {
			"description": "Issue identifier (unique within election)",
			"type": "integer"
		},
		"type": {
			"description": "Issue type",
			"enum": ["vote"]
		},
		"title": {
			"description": "Vote title",
			"$ref": "i18nTextSchema.json"
		},
		"question": {
			"description": "Vote description",
			"$ref": "i18nTextSchema.json"
		},
		"options": {
			"description": "Container of voting options",
			"type": "array",
			"items": { "$ref": "votingOptionSchema.json" }
		},
		"rules": {
			"description": "Container of voting rules",
			"type": "array",
			"items": {
				"oneOf": [
					{ "$ref": "summationRuleSchema.json" },
					{ "$ref": "cumulationRuleSchema.json" }
				]
			}
		},
		"ballotEncoding": {
			"description": "Identifier of the ballot encoding scheme",
			"type": "string"
		}
	},
	"required": ["id", "type", "title", "question", "options", "rules", "ballotEncoding"]
}
