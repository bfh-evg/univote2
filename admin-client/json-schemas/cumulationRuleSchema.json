{
	"$schema": "http://json-schema.org/draft-04/schema",
	"title": "Schema of a cumulation rules",
	"type": "object",
	"properties": {
		"id":         { "type": "integer" },
		"type":       { "enum": ["cumulation"] },
		"optionIds":  { "type": "array", "items": { "type": "integer" } },
		"lowerBound": { "type": "integer" },
		"upperBound": { "type": "integer" }
	},
	"required": ["id", "type", "optionIds", "lowerBound", "upperBound"],
	"additionalProperties": false
}
