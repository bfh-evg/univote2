<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
	<param-name>javax.faces.PROJECT_STAGE</param-name>
	<param-value>Development</param-value>
    </context-param>
    <context-param>
	<param-name>com.sun.faces.autoCompleteOffOnViewState</param-name>
	<param-value>false</param-value>
    </context-param>

    <context-param>
	<param-name>dev-mode</param-name>
	<param-value>false</param-value>	
    </context-param>
    <context-param>
	<param-name>dev-mode-registration-mock</param-name>
	<param-value>false</param-value>
    </context-param>
    <context-param>
	<param-name>aai-debug-mode</param-name>
	<param-value>false</param-value>
    </context-param>
	
    <context-param>
	<param-name>support-request-email-to</param-name>
	<param-value>selectio-helvetica@bfh.ch</param-value>
    </context-param>

    <context-param>
	<param-name>support-request-email-subject</param-name>
	<param-value>UniVote support request</param-value>
    </context-param>


    <servlet>
	<servlet-name>Faces Servlet</servlet-name>
	<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
	
	<load-on-startup>1</load-on-startup>
    </servlet>
    
    <!-- Enable Cross Origin Requests -->
<!--    <filter>
	<filter-name>CORSFilter</filter-name>
	<filter-class>ch.bfh.univote.voteclient.beans.CORSFilter</filter-class>
    </filter>-->
<!--    <filter>
	<filter-name>CORS</filter-name>
	<filter-class>com.thetransactioncompany.cors.CORSFilter</filter-class>
    </filter>
    <filter-mapping>
	<filter-name>CORS</filter-name>
	<url-pattern>/*</url-pattern>
    </filter-mapping>-->
    
    <servlet-mapping>
	<servlet-name>Faces Servlet</servlet-name>
	<url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
   
    <session-config>
	<session-timeout>
	    30
	</session-timeout>
    </session-config>
    <welcome-file-list>
	<welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>

</web-app>
